<div class="card shadow h-100">
  <div class="card-header py-3">
    <h3>Tambah Data <%=type%></h3>
  </div>
  <div class="card-body">
    <div class="row mt-3">
      <div class="col-md-8 col-sm-12 mb-4">
        <div class="card text-dark bg-light p-3">
          <h5 class="mb-4">Data <%=type%></h5>
          <div class="row mb-2">
            <div class="col-md-12">
              <div class="form-group mb-2">
                <label class="form-label">Tanggal <%=type%></label>
                <input
                  type="text"
                  name="transactionDate"
                  placeholder="Tanggal <%=type%>"
                  class="form-control"
                  value=""
                />
              </div>
            </div>
          </div>

          <label class="form-label">Produk</label>
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Cari</span>
            <input type="text" class="form-control" id="search" />
          </div>
          <div class="card p-4">
            <div class="overflow-scroll" style="height: 23rem" id="products"></div>
          </div>
        </div>
      </div>

      <div class="col-md-4 col-sm-12 mb-4">
        <div class="card text-dark bg-light p-3 h-100">
          <h5 class="mb-4">Daftar Produk</h5>
          <div class="col col-12 overflow-scroll" id="productCart" style="height: 32rem"></div>

          <div class="col col-12">
            <div class="floating-bottom">
              <h4 id="total"></h4>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <button class="btn btn-primary w-100" id="submitTransaction">Simpan Data</button>
      </div>
    </div>
  </div>
</div>

<script>
  let action = '<%- action %>';
  let type = '<%- type %>';
  let value = '<%- JSON.stringify(value) %>';
  value = JSON.parse(value);
  let redirect = action.split('/')[1];
</script>

<script src="/js/handle-transaction.js"></script>
