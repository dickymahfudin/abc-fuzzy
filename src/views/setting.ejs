<div class="button-group" style="margin-top: 20px; display: flex; justify-content: center; gap: 20px">
  <button
    id="resetData"
    style="
      background: linear-gradient(145deg, #57e32c, #409f20);
      color: white;
      border: 1px solid #3a8e1a;
      padding: 15px 30px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 18px;
      cursor: pointer;
      border-radius: 15px;
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
      transition: transform 0.2s;
    "
    onmouseover="this.style.transform='scale(1.05)'"
    onmouseout="this.style.transform='scale(1)'"
  >
    Reset Data Menjadi Laporan
  </button>
  <button
    id="hapusData"
    style="
      background: linear-gradient(145deg, #ff6347, #c73829);
      color: white;
      border: 1px solid #b32e23;
      padding: 15px 30px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 18px;
      cursor: pointer;
      border-radius: 15px;
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
      transition: transform 0.2s;
    "
    onmouseover="this.style.transform='scale(1.05)'"
    onmouseout="this.style.transform='scale(1)'"
  >
    Hapus Semua Data
  </button>
</div>

<script>
  document.getElementById('resetData').addEventListener('click', async () => {
    if (confirm('Apakah Anda yakin ingin mereset data menjadi laporan?')) {
      const response = await fetch('/setting/reset', { method: 'POST' });
      if (response.ok) {
        notification('success', 'Data telah direset menjadi laporan.');
      } else {
        notification('error', 'Gagal mereset data.');
      }
    }
  });

  document.getElementById('hapusData').addEventListener('click', async () => {
    if (confirm('Apakah Anda yakin ingin menghapus semua data?')) {
      const response = await fetch('/setting/hapus', { method: 'POST' });
      if (response.ok) {
        notification('success', 'Semua data telah dihapus.');
      } else {
        notification('error', 'Gagal menghapus data.');
      }
    }
  });
</script>
