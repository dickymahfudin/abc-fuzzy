<div class="row justify-content-center">
  <div class="col-xl-6 col-md-8">
    <div class="card">
      <div class="card-header py-3"><h3 class="card-title"><%=product?.id ? 'Edit' : 'Tambah'%> Data Produk</h3></div>
      <div class="card-body">
        <form class="mt-3" action="<%=action%>" method="post">
          <div class="mb-3">
            <label class="form-label">Nomor Barang</label>
            <input
              name="sku"
              type="text"
              class="form-control"
              placeholder="Nomor Barang"
              required
              value="<%=product?.sku ?? ''%>"
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Nama</label>
            <input
              name="name"
              type="text"
              class="form-control"
              placeholder="Nama"
              required
              value="<%=product?.name ?? ''%>"
            />
          </div>

          <div class="mb-3">
            <% const disabled = product?.id ? 'disabled' : ''%>
            <label class="form-label">Harga Beli</label>
            <input
              name="buyPrice"
              type="number"
              class="form-control"
              placeholder="Harga Beli"
              required
              value="<%=product?.buyPrice ?? ''%>"
              <%=disabled%>
              />
          </div>

          <div class="mb-3">
            <label class="form-label">Harga Jual</label>
            <input
              name="currentPrice"
              type="number"
              class="form-control"
              placeholder="Harga Jual"
              required
              value="<%=product?.currentPrice ?? ''%>"
            />
          </div>

          <div class="mb-3">
            <button class="btn btn-primary d-grid w-100" type="submit">Simpan</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../toast'); %>
